.feature-contents {
  padding: 5vh 15vw;
  background-image: url("<%= asset_path('back.png') %>");
  background-color:rgba(245,245,245,0.7);
  background-blend-mode:lighten;

}

.feature-contents>.title {
  text-align: center;
  font-size: 3.5vh;
  font-weight: bold;
  margin-bottom: 5vh;
  position: relative;
  margin-top: 13px; 
}

.feature-lists {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.feature-lists>.list {
  width: 33vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.feature-list-text {
  font-weight: bold;
  font-size: 22px;
  line-height: 50px;
}

.feature-list-description {
  font-size: 18px;
  margin-top: 20px;
}


/* 投稿記事 */

.tweet-contents {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10vh 0;
  background-image: url("<%= asset_path('back.png') %>");
  background-color:rgba(245,245,245,0.7);
  background-blend-mode:lighten;
}

.tweet-contents>.title {
  font-size: 5vh;
  line-height: 1.4;
  font-weight: bold;
}

.tweet-contents>.subtitle {
  font-size: 3vh;
  margin: 1vh 0;
  text-decoration: none;
  color: #3ccace;
  font-weight: bold;
}

.tweet-lists {
  width: 100vw;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  list-style: none;
}

.tweet-lists>.list {
  width: 37vh;
  padding: 1vw;
  background-color: #f5f5f5;
}


.tweet-img-content {
  position: relative;
}

.tweet-img {
  width: 33vh;
  height: 33vh;
}

.tweet-info {
  background-color: #f5f5f5;
  color: black;
  padding: 1vw;
}

.tweet-name {
  font-size: 2.5vh;
}


/* 投稿ボタン */

.post-btn {
  width: 120px;
  background: lightpink;
  text-align: center;
  border-radius: 4%;
  bottom: 32px;
  right: 32px;
  position: fixed;
  padding: 15px;
}

.post-btn-text {
  color: black;
  display: block;
  font-size: 18px;
  text-decoration: none;
  margin-bottom: 5px;
}

.post-btn-icon {
  width: 60%;
}